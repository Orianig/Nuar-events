---
// Página raíz: redirección al idioma por defecto (español) vía meta refresh para static build
const base = import.meta.env.BASE_URL;
const baseSlash = base.endsWith('/') ? base : base + '/';
const target = baseSlash + 'es/';
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="refresh" content={`0;url=${target}`} />
    <link rel="canonical" href={target} />
    <title>Redirigiendo...</title>
  </head>
  <body>
    <p>Redirigiendo a <a href={target}>versión en español</a>.</p>
  </body>
</html>
