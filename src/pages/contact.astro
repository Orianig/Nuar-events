---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - Nuar">
	<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-green-50 to-teal-100 p-8">
		<div class="text-center space-y-8">
			<h1 class="text-4xl font-bold text-gray-800">Hola, soy Contact</h1>
			
			<div class="flex flex-wrap gap-4 justify-center">
				<a href="/" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium shadow-md">
					Ir a Home
				</a>
				<a href="/projects" class="px-6 py-3 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-medium shadow-md">
					Ir a Proyectos
				</a>
			</div>
		</div>
	</div>
</Layout>
