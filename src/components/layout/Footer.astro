---
import type { FooterProps } from '../../types';

const { contactText } = Astro.props as FooterProps;
---

<footer class="bg-stone py-8 border-t border-bark/20">
  <div class="container mx-auto px-6 text-center">
    <a 
      href="/contact"
      data-i18n="footer.contact"
      class="inline-block text-2xl font-semibold text-bark hover:opacity-80 transition-opacity"
    >
      {contactText}
    </a>
  </div>
</footer>
