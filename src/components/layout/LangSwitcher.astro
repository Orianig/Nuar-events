---
interface Props {
  currentLang: 'es' | 'en';
  /** pathname actual (ej. /, /projects, /contact) para construir ?lang= */
  currentPath: string;
}

const { currentLang, currentPath } = Astro.props;
const currentLabel = currentLang === 'es' ? 'ES' : 'EN';
const otherLabel = currentLang === 'es' ? 'EN' : 'ES';
const otherLang = currentLang === 'es' ? 'en' : 'es';
// Español = URL limpia (es el valor por defecto). Inglés = ?lang=en
const hrefOther = otherLang === 'es' ? currentPath : `${currentPath}?lang=en`;
const hrefEs = currentPath;
const hrefEn = `${currentPath}?lang=en`;
---

<!-- Desktop: Dropdown con enlace (recarga la página con el otro idioma) -->
<div class="hidden md:block relative lang-switcher">
  <button
    type="button"
    class="lang-btn flex items-center gap-2 px-4 py-1.5 rounded-full border border-bark/30 text-bark font-medium text-sm hover:bg-bark/10 transition-colors cursor-pointer"
    aria-haspopup="true"
    aria-expanded="false"
    aria-label="Cambiar idioma"
  >
    <span class="lang-current">{currentLabel}</span>
    <svg class="lang-chevron w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>
  <div class="lang-dropdown hidden absolute left-0 right-0 top-full mt-1 rounded-full border border-bark/20 bg-stone shadow-lg z-10">
    <a
      href={hrefOther}
      class="lang-switch-dropdown block w-full px-4 py-1.5 text-center text-bark text-sm font-medium hover:bg-bark/10 rounded-full transition-colors"
    >
      {otherLabel}
    </a>
  </div>
</div>

<!-- Mobile: Enlaces (recargan la página con el idioma elegido) -->
<div class="md:hidden flex items-center gap-2 text-sm font-medium">
  <a
    href={hrefEs}
    class="px-3 py-1.5 rounded-full transition-colors font-medium"
    class:list={[
      currentLang === 'es' ? 'bg-bark/10 text-bark' : 'text-bark/60 hover:text-bark'
    ]}
  >
    ES
  </a>
  <span class="text-bark/30">|</span>
  <a
    href={hrefEn}
    class="px-3 py-1.5 rounded-full transition-colors font-medium"
    class:list={[
      currentLang === 'en' ? 'bg-bark/10 text-bark' : 'text-bark/60 hover:text-bark'
    ]}
  >
    EN
  </a>
</div>

<script>
  // Solo abrir/cerrar el dropdown; el cambio de idioma es por enlace (recarga).
  function initLangSwitcher() {
    const btn = document.querySelector('.lang-switcher .lang-btn') as HTMLButtonElement | null;
    const dropdown = document.querySelector('.lang-switcher .lang-dropdown') as HTMLElement | null;
    const chevron = document.querySelector('.lang-switcher .lang-chevron') as SVGElement | null;

    if (btn && dropdown) {
      btn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        dropdown.classList.toggle('hidden');
        chevron?.classList.toggle('rotate-180');
        btn.setAttribute('aria-expanded', dropdown.classList.contains('hidden') ? 'false' : 'true');
      });

      document.addEventListener('click', (e) => {
        const switcher = document.querySelector('.lang-switcher');
        if (switcher && !switcher.contains(e.target as Node)) {
          dropdown.classList.add('hidden');
          chevron?.classList.remove('rotate-180');
          btn.setAttribute('aria-expanded', 'false');
        }
      });
    }
  }

  document.addEventListener('DOMContentLoaded', initLangSwitcher);
</script>
