---
import type { SectionThreeProps } from '../../types';

const { image, centerText, quote, imageAlt, effectType = 'reveal', backgroundColor } = Astro.props as SectionThreeProps;
---

<section class={`relative py-32 ${backgroundColor ?? 'bg-sand'} overflow-hidden`}>
  <div class="container mx-auto px-6">
    <div class="relative max-w-5xl mx-auto">
      <div
        class="relative rounded-3xl overflow-hidden shadow-2xl"
        style="min-height: 500px;"
      >
        <img 
          src={image} 
          alt={imageAlt}
          class={`w-full h-full object-cover ${
            effectType === 'zoom' ? 'hover:scale-110 transition-transform duration-700' : ''
          }`}
          id="effect-image"
        />

        <div class="absolute inset-0 flex items-center justify-center">
          <div class="bg-stone/90 backdrop-blur-sm rounded-full px-12 py-8 shadow-xl">
            <h2 data-i18n="sectionThree.centerText" class="text-5xl font-bold text-olive tracking-wider">
              {centerText}
            </h2>
          </div>
        </div>
      </div>

      <p data-i18n="sectionThree.quote" class="text-center mt-8 text-olive italic max-w-2xl mx-auto">
        "{quote}"
      </p>
    </div>
  </div>
</section>
