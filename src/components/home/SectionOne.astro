---
import type { SectionOneProps } from '../../types';

const { image1, image2, title, paragraph, bullets = [], backgroundColor } = Astro.props as SectionOneProps;
---

<section class={`py-20 ${backgroundColor ?? 'bg-stone'}`}>
  <div class="container mx-auto px-6 max-w-7xl">
    <div class="grid md:grid-cols-[1fr_1fr] gap-8 lg:gap-12 items-start">
      <div class="grid grid-cols-2 gap-3 md:gap-8 relative">
        <div class="relative overflow-hidden rounded-2xl shadow-lg aspect-3/4 min-h-[280px]">
          <img
            src={image1}
            alt=""
            class="w-full h-full object-cover"
          />
        </div>
        <div class="relative overflow-hidden rounded-2xl shadow-lg aspect-3/4 min-h-[280px]">
          <img
            src={image2}
            alt=""
            class="w-full h-full object-cover"
          />
        </div>
        <div
          class="hidden md:block absolute left-1/4 bottom-0 w-1/2 border-b border-dashed border-bark/25 -translate-y-4"
          aria-hidden="true"
        />
      </div>

      <div class="md:pl-8 md:border-l md:border-dashed md:border-bark/20">
        <h2 class="font-title text-3xl md:text-4xl items-center font-semibold text-bark leading-tight mb-6">
          {title}
        </h2>
        <p class="font-body text-bark/90 text-base md:text-md leading-relaxed mb-6">
          {paragraph}
        </p>
        <ul class="space-y-4 list-none pl-8">
          {bullets.map((bullet) => (
            <li class="flex items-start gap-3 font-body text-bark text-md">
              <span
                class="shrink-0 w-5 h-5 rounded-full border-2 border-bark/60 mt-0.5"
                aria-hidden="true"
              />
              <span>{bullet}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
