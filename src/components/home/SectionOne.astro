---
import type { SectionOneProps } from '../../types';

const { sectionTitle, items = [], backgroundColor } = Astro.props as SectionOneProps;
---

<section class={`py-20 ${backgroundColor ?? 'bg-stone'}`}>
  <div class="container mx-auto px-6">
    {sectionTitle && (
      <h2 data-i18n="sectionOne.title" class="font-title text-4xl font-bold text-center mb-16 text-bark">
        {sectionTitle}
      </h2>
    )}

    <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
      {items.map((item) => (
        <div data-section="sectionOne" class="group">
          <div class="relative overflow-hidden rounded-2xl shadow-xl mb-6 aspect-4/3">
            <img 
              src={item.image} 
              alt={item.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
          </div>

          <div class="space-y-3">
            <h3 data-i18n="title" class="font-title text-2xl font-semibold text-bark">
              {item.title}
            </h3>
            <p data-i18n="description" class="font-body text-bark leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
