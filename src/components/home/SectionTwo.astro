---
import type { SectionTwoProps } from '../../types';

const { sectionTitle, items = [], backgroundColor } = Astro.props as SectionTwoProps;
---

<section class={`py-20 ${backgroundColor ?? 'bg-bark'}`}>
  <div class="container mx-auto px-6">
    {sectionTitle && (
      <h2 data-i18n="sectionTwo.title" class="font-title text-4xl font-bold text-center mb-16 text-stone">
        {sectionTitle}
      </h2>
    )}

    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {items.map((item) => (
        <div data-section="sectionTwo" class="group bg-stone/10 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
          <div class="relative overflow-hidden aspect-square">
            <img 
              src={item.image} 
              alt={item.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
            />
          </div>

          <div class="p-6 space-y-3">
            <h3 data-i18n="title" class="font-title text-xl font-semibold text-stone">
              {item.title}
            </h3>
            <p data-i18n="description" class="font-body text-stone text-sm leading-relaxed">
              {item.description}
            </p>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
